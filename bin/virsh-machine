#!/bin/bash

#
# 2017-10-25
# Author: Mizuki Urushida
#

# Checked OS
#	CentOS 7.4
#

#### Default Variables ####
if type go >/dev/null 2>&1; then
	if ! type names-generator >/dev/null 2>&1; then
		go get -u github.com/moby/moby/pkg/namesgenerator/cmd/names-generator
	fi
	# e.g.) lucid_mirzakhani -> lucid-mirzakhani
	hostname=$(names-generator | tr _ -)
else
	hostname="example"
fi

os_path="http://ftp.riken.jp/Linux/centos/7/os/x86_64/"
pass=$(openssl passwd -1 "test")
vcpu=1
memory=4096 # in MiB
size=20 # in GiB
##########################

usage_exit() {
	echo "Usage: $0 [-h hostname] [-s os_source] [-a cidr] [-g gateway] [-d dns] [-p] [-C vcpu_num] [-M ram_size] [-S disk_size]" 1>&2
	exit 1
}

while getopts "h:s:a:g:d:pC:M:S:" OPT; do
	case $OPT in
		h)	# Hostname (e.g. test-vm)
			hostname=${OPTARG}
			;;
		s)	# OS Source URL (e.g. http://ftp.riken.jp/Linux/centos/7/os/x86_64)
			os_path=${OPTARG}
			;;
		a)	# Host CIDR (e.g. 192.168.0.2/24)
			addr=${OPTARG}
			;;
		g)	# Gateway IP (e.g. 192.168.0.1)
			gw=${OPTARG}
			;;
		d)	# DNS Server IP (e.g. 192.168.0.1)
			dns=${OPTARG}
			;;
		p)	# Ask me Password
			read -sp "Enter Host's Password: " _p1
			tty -s && echo
			read -sp "Verify Password: " _p2
			tty -s && echo
			if [[ ${_p1} == ${_p2} ]]; then
				pass=$(openssl passwd -1 ${_p1})
			else
				echo "Password doesn't match"
				exit 1
			fi
			;;
		C)	# number of vCPU
			vcpu=${OPTARG}
			;;
		M)	# size of Memory
			memory=${OPTARG}
			;;
		S)	# size of Persistent Disk
			size=${OPTARG}
			;;
		\?)	usage_exit
			;;
	esac
done
shift $((OPTIND - 1))

domain=$(echo $(hostname) | cut -d. -f2-)
fqdn=${hostname}.${domain}

### Debug Code
#echo hostname=${hostname}
#echo os_path=${os_path}
#echo addr=${addr}
#echo gw=${gw}
#echo dns=${dns}
#echo pass=${pass}
#echo vcpu=${vcpu}
#echo memory=${memory}
#echo size=${size}
#echo domain=${domain}
#echo fqdn=${fqdn}
#exit 0
###

if [[ ! -d $HOME/ks ]]; then
	mkdir $HOME/ks
fi

if [[ -e $HOME/ks/${fqdn}.ks ]]; then
	echo "The machine name is already used"
	exit 1
fi

# decide static ip or dhcp
if [[ -z "${addr}" ]]; then
	network_option="--bootproto dhcp"
else
	network_option="--bootproto static --ip ${addr%/*} --netmask $(ipcalc -m ${addr} | cut -d= -f2) --gateway ${gw} --nameserver ${dns}"
fi

# purposely expand shell variables ('_EOF_' -> _EOF_)
cat << _EOF_ > $HOME/ks/${fqdn}.ks
install
lang en_US.UTF-8
keyboard jp106
network --device eth0 --hostname ${fqdn} ${network_option} 
rootpw --iscrypted ${pass}
firewall --service=ssh
authconfig --enableshadow --passalgo=sha512 --enablefingerprint
selinux --disabled
timezone Asia/Tokyo

# disk
zerombr
clearpart --all --initlabel
part /boot --size=1024 --asprimary
part swap --size=${memory}
part / --size=1 --grow
bootloader --location=mbr

reboot

%packages
@base
@development
%end
_EOF_

sudo virt-install \
--connect qemu:///system \
--name ${fqdn} \
--vcpus ${vcpu} \
--memory ${memory} \
--disk path=/var/kvm/disk/${fqdn}.img,size=${size} \
--os-type linux \
--os-variant virtio26 \
--accelerate \
--network bridge=br0 \
--hvm \
--location ${os_path} \
--initrd-inject $HOME/ks/${fqdn}.ks \
--nographics \
--extra-args "ks=file:/${fqdn}.ks console=ttyS0,38400"

